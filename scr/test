    filterTest.add("что бУдет");
    filterTest.add("если доЛжен появиться тот же");
    filterTest.add("файл");
    filterTest.add("не уберется ли что-то Лишнее");


    String firstFile = "C:\\Users\\lebed\\OneDrive\\Рабочий стол\\git_intro\\test4_1.txt";
    String secondFile = "C:\\Users\\lebed\\OneDrive\\Рабочий стол\\git_intro\\test4_2.txt";
